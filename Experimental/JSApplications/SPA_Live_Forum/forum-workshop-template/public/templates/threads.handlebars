<h3>Threads</h3>
{{#if threads}}
    <ul>
        {{# threads}}
            <li>
                <h3><a href="#/threads/{{id}}">{{title}}</a></h3>
                {{#if user}}
                <span>by <a href="#/users">{{user.username}}</a></span>
                    <b>{{postDate}}</b>
                {{else}}
                    <span>by System</span>
                {{/if}}
            </li>
        {{/threads}}
    </ul>
{{/if}}